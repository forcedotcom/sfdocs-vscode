		"keybindings": [
			{
				"command": "SFDocs.editing.toggleBold",
				"key": "ctrl+b",
				"mac": "cmd+b",
				"when": "editorTextFocus && !editorReadonly && editorLangId == markdown"
			},
			{
				"command": "SFDocs.editing.toggleItalic",
				"key": "ctrl+i",
				"mac": "cmd+i",
				"when": "editorTextFocus && !editorReadonly && editorLangId == markdown"
			},
			{
				"command": "SFDocs.editing.toggleStrikethrough",
				"key": "alt+s",
				"when": "editorTextFocus && !editorReadonly && editorLangId == markdown"
			},
			{
				"command": "SFDocs.editing.checkList",
				"key": "alt+c",
				"when": "editorTextFocus && editorLangId == markdown"
			},
			{
				"command": "SFDocs.editing.pasteHyperlink",
				"key": "ctrl+l",
				"mac": "cmd+l",
				"when": "editorTextFocus && !editorReadonly && editorLangId == markdown"
			},
			{
				"command": "SFDocs.onEnterKey",
				"key": "enter",
				"when": "editorTextFocus && !editorReadonly && editorLangId == markdown && !suggestWidgetVisible && !editorHasMultipleSelections && vim.mode != 'Normal' && vim.mode != 'Visual' && vim.mode != 'VisualBlock' && vim.mode != 'VisualLine' && vim.mode != 'SearchInProgressMode' && vim.mode != 'CommandlineInProgress' && vim.mode != 'Replace' && vim.mode != 'EasyMotionMode' && vim.mode != 'EasyMotionInputMode' && vim.mode != 'SurroundInputMode'"
			},
			{
				"command": "SFDocs.onShiftEnterKey",
				"key": "shift+enter",
				"when": "editorTextFocus && !editorReadonly && editorLangId == markdown && !suggestWidgetVisible && !editorHasMultipleSelections"
			},
			{
				"command": "SFDocs.onBackspaceKey",
				"key": "backspace",
				"when": "editorTextFocus && !editorReadonly && editorLangId == markdown && !suggestWidgetVisible && !editorHasMultipleSelections && vim.mode != 'Normal' && vim.mode != 'Visual' && vim.mode != 'VisualBlock' && vim.mode != 'VisualLine' && vim.mode != 'SearchInProgressMode' && vim.mode != 'CommandlineInProgress' && vim.mode != 'Replace' && vim.mode != 'EasyMotionMode' && vim.mode != 'EasyMotionInputMode' && vim.mode != 'SurroundInputMode'"
			},
			{
				"command": "SFDocs.table.nextCell",
				"key": "tab",
				"when": "editorLangId == markdown && editorTextFocus && !editorReadonly && !editorTabMovesFocus && !suggestWidgetMultipleSuggestions && !suggestWidgetVisible && !inSnippetMode"
			},
			{
				"command": "SFDocs.table.prevCell",
				"key": "shift+tab",
				"when": "editorLangId == markdown && editorTextFocus && !editorReadonly && !editorTabMovesFocus && !suggestWidgetMultipleSuggestions && !suggestWidgetVisible && !inSnippetMode"
			},
			{
				"command": "SFDocs.custom.contentReuse",
				"key": "ctrl+r",
				"mac": "cmd+r",
				"when": "editorTextFocus && !editorReadonly && editorLangId == markdown && !config.SFDocs.markdownAssistant.disableCustom"
			},
			{
				"command": "SFDocs.custom.insertVideoShortcut",
				"key": "ctrl+shift+m",
				"mac": "cmd+shift+m",
				"when": "editorTextFocus && !editorReadonly && editorLangId == markdown && !config.SFDocs.markdownAssistant.disableCustom"
			}
		],
		"configuration": {
			"type": "object",
			"title": "SFDocs Markdown Assistant",
			"properties": {
				"SFDocs.markdownAssistant.completion.respectVscodeSearchExclude": {
					"type": "boolean",
					"default": true,
					"markdownDescription": "Select this to exclude files from auto-completion using VS Code's `#search.exclude#` setting. (`node_modules`, `bower_components` and `*.code-search` are **always excluded**, not affected by this option.)",
					"scope": "resource"
				},
				"SFDocs.markdownAssistant.completion.root": {
					"type": "string",
					"default": "",
					"description": "The root folder used for the auto-completion.",
					"scope": "resource"
				},
				"SFDocs.markdownAssistant.italic.indicator": {
					"type": "string",
					"default": "_",
					"description": "Use `*` or `_` to wrap italic text.",
					"enum": [
						"_",
						"*"
					]
				},
				"SFDocs.markdownAssistant.orderedList.autoRenumber": {
					"type": "boolean",
					"default": true,
					"description": "Auto-fix ordered list markers."
				},
				"SFDocs.markdownAssistant.orderedList.marker": {
					"type": "string",
					"default": "ordered",
					"description": "Ordered list marker.",
					"enum": [
						"one",
						"ordered"
					],
					"markdownEnumDescriptions": [
						"Always use `1.` as ordered list marker.",
						"Use increasing numbers as ordered list marker."
					]
				},
				"SFDocs.markdownAssistant.list.indentationSize": {
					"type": "string",
					"enum": [
						"adaptive",
						"inherit"
					],
					"markdownEnumDescriptions": [
						"Adaptive indentation size according to the context, trying to **left align the sublist with its parent's content**. For example:\n\n```markdown\n- Parent\n  - Sublist\n\n1. Parent\n   1. Sublist\n\n10. Parent with longer marker\n    1. Sublist\n```",
						"Use the configured tab size of the current document (see the status bar). For example (with `tabSize: 4`):\n\n```markdown\n- Parent\n    - Sublist\n\n1. Parent\n    1. Sublist\n\n10. Parent with longer marker\n    1. Sublist\n```"
					],
					"default": "adaptive",
					"markdownDescription": "List indentation scheme. \n\nWhether to use different indentation sizes on different list contexts or stick to VS Code's tab size.",
					"scope": "resource"
				},
				"SFDocs.markdownAssistant.table.autoFormat": {
					"type": "boolean",
					"default": true,
					"description": "Auto Format tables while editing"
				},
				"SFDocs.markdownAssistant.disableCustom": {
					"type": "boolean",
					"default": false,
					"description": "Disable Custom Salesforce Plugins"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run build:prod",
		"compile": "webpack",
		"watch": "webpack --watch",
		"build:prod": "webpack --mode production --devtool hidden-source-map",
		"package": "vsce package",
		"vscode:publish": "vsce publish",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
